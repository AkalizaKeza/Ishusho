<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.akalizakeza.apps.ishusho.activity.Tab3Create">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <Button
        android:id="@+id/openComicMaker"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="TRY COMIC MAKER" />

    <Button
        android:id="@+id/new_post_upload"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="UPLOAD YOUR ART" />
</LinearLayout>
    <ImageView
        android:id="@+id/new_post_picture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/colorPrimaryDark"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/new_post_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Describe your post" />

    <Button
        android:id="@+id/new_post_submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SUBMIT" />

</LinearLayout>
